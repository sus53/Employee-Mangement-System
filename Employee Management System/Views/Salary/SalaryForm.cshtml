@model Employee_Management_System.Models.Salary
@{
    ViewBag.Title = "SalaryForm";
}

<div class="container">
    <div>
        <h3 class="center">Salary Form</h3>
    </div>
    <div class="row form ">
        @using (Html.BeginForm("AddEditSalary", "Salary", FormMethod.Post))
        {
            <div class="input-field col s12">
                @Html.HiddenFor(x => x.salaryID)
                @Html.DropDownListFor(x => x.departmentID, @ViewBag.DepartmentList as SelectList, "Select Department", new { @id = "departmentID", @class = "form-control" })
            </div>
            <div class="input-field col s12">
                @Html.DropDownListFor(x => x.employeeID, @ViewBag.EmployeeList as SelectList, "Select Employee", new { @id = "departmentID", @class = "form-control" })
            </div>
            <div class="input-field col s12 m12">
                @Html.TextBoxFor(x => x.salary1, new { @id = "salary1", @class = "" })
                <label for="salary1">Salary</label>
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(x => x.tax, new { @id = "tax", @class = "" })
                <label for="tax">Tax</label>
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(x => x.penalty, new { @id = "penalty", @class = "" })
                <label for="penalty">Penalty</label>
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(x => x.netSalary, new { @id = "netSalary", @class = "" })
                <label for="netSalary">Salary</label>
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(x => x.remarks, new { @id = "remarks", @class = "" })
                <label for="remarks">Remarks</label>
            </div>
            <div class="center" style="padding-right: 100px;">
                <button class="btn">Submit</button>
            </div>
        }
    </div>
</div>

