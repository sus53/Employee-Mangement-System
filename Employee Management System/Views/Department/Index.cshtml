@model List<Employee_Management_System.Models.Department>
@{
    ViewBag.Title = "Index";
}
<div class="container">
    <div class="">
        <h3>Department Section</h3>
    </div>
    <div class="block row">
        <div>
            <p class="header left">Department List</p>
        </div>
        <div>
            <a href="@Url.Action("DepartmentForm")" class="right btn">Add Department</a>
        </div>
    </div>
    <div class="block row">
        <table class="highlight">
            <tr>
                <th>
                    Department ID
                </th>
                <th>
                    Department Name
                </th>
                <th>
                    Department Location
                </th>
                <th>
                    Head of Department
                </th>
                <th>
                    Actions
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.departmentID
                    </td>
                    <td>
                        @item.departmentName
                    </td>
                    <td>
                        @item.departmentLocation
                    </td>
                    <td>
                        @item.headOfDepartment
                    </td>
                    <td>
                        <a href="@Url.Action("DepartmentForm", new { @item.departmentID,@item.departmentName,@item.departmentLocation,@item.headOfDepartment})" class="btn">Edit</a>
                        <button class="btn HideonClick" data-HideID="@item.departmentID">Delete</button>
                    </td>
                </tr>
                <tr id="@item.departmentID" class="HideRow">
                    <td colspan="4" class="center">
                        Do you want to delete this Department?
                    </td>
                    <td>
                        <a href="@Url.Action("DeleteDepartment",new { @item.departmentID})" class="btn">Yes</a>
                        <button class="btn HideonClick" data-HideID="@item.departmentID">No</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
