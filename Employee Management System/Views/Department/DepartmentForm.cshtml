@model Employee_Management_System.Models.Department
@{
    ViewBag.Title = "DepartmentForm";
}

<div class="container">
    <div>
        <h3 class="center">Department Form</h3>
    </div>
    <div class="row form ">
        @using (Html.BeginForm("AddEditDepartment", "Department", FormMethod.Post))
        {
            <div class="input-field col s12">
                @Html.HiddenFor(x => x.departmentID)
                @Html.TextBoxFor(x => x.departmentName, new { @id = "departmentName", @class = "" })
                <label for="departmentName">Department Name</label>
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(x => x.departmentLocation, new { @id = "departmentLocation", @class = "" })
                <label for="departmentLocation">Department Location</label>
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(x => x.headOfDepartment, new { @id = "headOfDepartment", @class = "" })
                <label for="headOfDepartment">Head of Department</label>
            </div>
            <div class="center" style="padding-right: 100px;">
                <button class="btn">Submit</button>
            </div>
        }
    </div>
</div>


