@model Employee_Management_System.Models.C_user
@{
    ViewBag.Title = "Index";
}

<div class="container" style="padding-left:20vw;padding-top:4vh;">
    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
        <div class="form" style="padding-left:3vw;">
            <div class="center">
                <h3>Login form</h3>
            </div>
            <div class="mb-3 row">
                <div class="col-lg-3">
                    <span for="email" class="form-label left" style="padding-top:10px">Email address </span>
                </div>
                <div class="col-lg-9">
                    @Html.TextBoxFor(x => x.email, new { @class="form-control" })
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-lg-3">
                    <span for="password" class="form-label left" style="padding-top:10px">Password </span>
                </div>
                <div class="col-lg-9">
                    <input type="password" class="form-control" id="password" placeholder="">
                </div>
            </div>
            <div class="row center">
                <div class="col-lg-6">
                    <br>
                    @Html.ActionLink("Create new account", "CreateNewAccount", null, new { @class = "font" })
                </div>
                <div class="col-lg-6">
                    <br>
                    @Html.ActionLink("Forgot Password", "ForgotPassword", null, new { @class = "font" })
                </div>
            </div>
            <div class="row center">
                <div class="col-lg-12">
                    <br>
                    <button class="btn center">Login</button>
                </div>
            </div>
        </div>

    }

</div>


