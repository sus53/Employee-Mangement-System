@model List<Employee_Management_System.Models.Leave> 
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="">
        <h3>Leave Section</h3>
    </div>
    <div class="block row">
        <div>
            <p class="header left">Leave List</p>
        </div>
        <div>
            <a href="@Url.Action("LeaveForm")" class="right btn">Add Leave</a>
        </div>
    </div>
    <div class="block row">
        <table class="highlight ">
            <tr>
                <th>
                    Leave ID
                </th>
                <th>
                    Department ID
                </th>
                <th>
                    Employee ID
                </th>
                <th>
                    Subject of Leave
                </th>
                <th>
                    Leave of Duration
                </th>
                <th>
                    Remarks
                </th>
                <th>
                    Actions
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.leaveID
                    </td>
                    <td>
                        @item.departmentID
                    </td>
                    <td>
                        @item.employeeID
                    </td>
                    <td>
                        @item.subjectOfLeave
                    </td>
                    <td>
                        @item.leaveOfDuration
                    </td>
                    <td>
                        @item.remarks
                    </td>
                    <td>
                        <a href="@Url.Action("LeaveForm", new { @item.leaveID,@item.departmentID,@item.employeeID,@item.subjectOfLeave,@item.remarks})" class="btn">Edit</a>
                        <button class="btn HideonClick" data-HideID="@item.leaveID">Delete</button>
                    </td>
                </tr>
                <tr id="@item.leaveID" class="HideRow">
                    <td colspan="6" class="center">
                        Do you want to delete this Leave?
                    </td>
                    <td>
                        <a href="@Url.Action("DeleteLeave",new { @item.leaveID})" class="btn">Yes</a>
                        <button class="btn HideonClick" data-HideID="@item.leaveID">No</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


