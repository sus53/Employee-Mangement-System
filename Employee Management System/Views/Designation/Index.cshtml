@model List<Employee_Management_System.Models.Designation>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="">
        <h3>Designation Section</h3>
    </div>
    <div class="block row">
        <div>
            <p class="header left">Designation List</p>
        </div>
        <div>
            <a href="@Url.Action("DesignationForm")" class="right btn">Add Designation</a>
        </div>
    </div>
    <div class="block row">
        <table class="highlight">
            <tr>
                <th>
                    Designation ID
                </th>
                <th>
                    Designation Name
                </th>
                <th>
                    Remarks
                </th>
                <th>
                    Actions
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.designationID
                    </td>
                    <td>
                        @item.designationName
                    </td>
                    <td>
                        @item.remarks
                    </td>
                    <td>
                        <a href="@Url.Action("DesignationForm", new { @item.designationID,@item.designationName,@item.remarks})" class="btn">Edit</a>
                        <button class="btn HideonClick" data-HideID="@item.designationID">Delete</button>
                    </td>
                </tr>
                <tr id="@item.designationID" class="HideRow">
                    <td colspan="3" class="center">
                        Do you want to delete this Designation?
                    </td>
                    <td>
                        <a href="@Url.Action("DeleteDesignation",new { @item.designationID})" class="btn">Yes</a>
                        <button class="btn HideonClick" data-HideID="@item.designationID">No</button>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

