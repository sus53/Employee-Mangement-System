@model Employee_Management_System.Models.Vacancy
@{
    ViewBag.Title = "VacancyForm";
}

<div class="container">
    <div>
        <h3 class="center">Vacancy Form</h3>
    </div>
    <div class="row form ">
        @using (Html.BeginForm("AddEditVacancy", "Vacancy", FormMethod.Post))
        {
            <div class="input-field col s12">
                @Html.HiddenFor(x => x.vacancyID)
                @Html.TextBoxFor(x => x.position, new { @id = "position", @class = "" })
                <label for="position">Position</label>
            </div>
            <div class="input-field col s12 m12">
                @Html.TextBoxFor(x => x.qualification, new { @id = "qualification", @class = "" })
                <label for="qualification">Qualification</label>
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(x => x.experience, new { @id = "experience", @class = "" })
                <label for="experience">Experience</label>
            </div>
            <div class="input-field col s12">
                @Html.TextBoxFor(x => x.remarks, new { @id = "remarks", @class = "" })
                <label for="remarks">Remarks</label>
            </div>
            <div class="center" style="padding-right: 100px;">
                <button class="btn">Submit</button>
            </div>
        }
    </div>
</div>

